<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="NomPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>sopramon.model.Achat</class>
		<class>sopramon.model.Administrateurr</class>
		<class>sopramon.model.Arene</class>
		<class>sopramon.model.Boss</class>
		<class>sopramon.model.Capacite</class>
		<class>sopramon.model.Combat</class>
		<class>sopramon.model.Coup</class>
		<class>sopramon.model.Item</class>
		<class>sopramon.model.Signe</class>
		<class>sopramon.model.Sopramon</class>
		<class>sopramon.model.Type</class>
		<class>sopramon.model.Utilisateur</class>

		<properties>
			<property name="hibernate.connection.url"
				value="jdbc:mysql://192.168.1.105/sopramongame" />
			<property name="hibernate.connection.driver"
				value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.user" value="root" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

